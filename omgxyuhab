    Murder = false,
    InfiniteYield = false
}

-- Function to create glow
local function CreateGlow(indicator)
    local glow = Instance.new("UIStroke")
    glow.Color = Color3.fromRGB(255, 255, 255)
    glow.Thickness = 3
    glow.Transparency = 0.7
    glow.Parent = indicator
    
    local innerGlow = Instance.new("UIStroke")
    innerGlow.Color = Color3.fromRGB(255, 255, 255)
    innerGlow.Thickness = 1.5
    innerGlow.Transparency = 0.3
    innerGlow.Parent = indicator
    
    return {glow, innerGlow}
end

-- Function to update indicator
local function UpdateIndicator(button, indicator, statusLabel, state, buttonType)
    if state then
        indicator.BackgroundColor3 = INDICATOR_ON_COLOR
        
        CreateGlow(indicator)
        
        if buttonType == "toggle" then
            statusLabel.Text = "on"
            statusLabel.TextColor3 = STATUS_ON_COLOR
            
            if button.Name == "EventFarmButton" then
                button.BackgroundColor3 = EVENT_FARM_ACTIVE_COLOR
            elseif button.Name == "CoinsFarmButton" then
                button.BackgroundColor3 = COINS_FARM_ACTIVE_COLOR
            elseif button.Name == "EspButton" then
                button.BackgroundColor3 = ESP_ACTIVE_COLOR
            elseif button.Name == "SheriffButton" then
                button.BackgroundColor3 = SHERIFF_ACTIVE_COLOR
            elseif button.Name == "MurderButton" then
                button.BackgroundColor3 = MURDER_ACTIVE_COLOR
            end
        else
            statusLabel.Text = "executed"
            statusLabel.TextColor3 = STATUS_ON_COLOR
            button.BackgroundColor3 = INFINITE_YIELD_ACTIVE_COLOR
        end
    else
        indicator.BackgroundColor3 = INDICATOR_OFF_COLOR
        for _, stroke in pairs(indicator:GetChildren()) do
            if stroke:IsA("UIStroke") then
                stroke:Destroy()
            end
        end
        
        if buttonType == "toggle" then
            statusLabel.Text = "off"
            statusLabel.TextColor3 = STATUS_OFF_COLOR
            
            if button.Name == "EventFarmButton" then
                button.BackgroundColor3 = EVENT_FARM_COLOR
            elseif button.Name == "CoinsFarmButton" then
                button.BackgroundColor3 = COINS_FARM_COLOR
            elseif button.Name == "EspButton" then
                button.BackgroundColor3 = ESP_COLOR
            elseif button.Name == "SheriffButton" then
                button.BackgroundColor3 = SHERIFF_COLOR
            elseif button.Name == "MurderButton" then
                button.BackgroundColor3 = MURDER_COLOR
            end
        else
            statusLabel.Text = "not executed"
            statusLabel.TextColor3 = STATUS_OFF_COLOR
            button.BackgroundColor3 = INFINITE_YIELD_COLOR
        end
    end
end

